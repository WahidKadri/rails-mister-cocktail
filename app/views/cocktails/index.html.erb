<div class="banner">
  <div class="banner-content">
    <h1><i class="fas fa-glass-martini"></i> Mister Cocktails</h1>
    <ul class="list-unstyled">
        <% @cocktails.each do |cocktail| %>
          <li>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
          <% end %>
      </ul>
      <%= link_to new_cocktail_path do %>
      <span class="btn btn-primary"><i class="fas fa-plus"> Add a new cocktail</i></span>
      <% end %>
  </div>
</div>
