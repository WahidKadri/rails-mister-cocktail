<h1><%= @cocktail.name %></h1>
<div>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <p>Description:</p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> de <%= dose.ingredient.name %></li>
    <% end %>
  </ul>

  <%= link_to new_cocktail_dose_path(@cocktail) do %>
  <span class="btn btn-success"><i class="fas fa-plus"> Add an ingredient</i></span>
  <% end %>

  <%= link_to "/" do %>
  <i class="fas fa-undo-alt"> Back to list</i>

  <% end %>
</div>
